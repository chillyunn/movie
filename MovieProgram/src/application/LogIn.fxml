<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
	styleClass="LogIn" xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml" fx:controller="application.LogInController">
	<top>
		<Text strokeType="OUTSIDE" strokeWidth="0.0" text="LogIn"
			textAlignment="CENTER" wrappingWidth="104.50927734375"
			BorderPane.alignment="CENTER">
			<font>
				<Font size="39.0" />
			</font>
		</Text>
	</top>
	<bottom>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
			spacing="50.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="btnFind" onAction="#handleBtnFindAction"
					mnemonicParsing="false" prefHeight="56.0" prefWidth="195.0"
					text="ID/PWD찾기">
					<font>
						<Font size="25.0" />
					</font>
				</Button>
				<Button fx:id="btnSignUp" mnemonicParsing="false"
					onAction="#handleBtnSignUpAction" prefHeight="56.0"
					prefWidth="143.0" text="회원가입">
					<font>
						<Font size="25.0" />
					</font>
				</Button>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</HBox>
	</bottom>
	<left>
		<VBox alignment="CENTER_RIGHT" prefHeight="382.0"
			prefWidth="23.0" spacing="35.0" BorderPane.alignment="CENTER">
			<children>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID">
					<font>
						<Font size="39.0" />
					</font>
				</Text>
				<Text strokeType="OUTSIDE" strokeWidth="0.0" text="PWD">
					<font>
						<Font size="39.0" />
					</font>
				</Text>
			</children>
		</VBox>
	</left>
	<center>
		<VBox alignment="CENTER" fillWidth="false" prefHeight="382.0"
			prefWidth="377.0" spacing="20.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="txtID" prefHeight="39.0"
					prefWidth="264.0">
					<font>
						<Font size="30.0" />
					</font>
				</TextField>
				<PasswordField fx:id="txtPWD" prefHeight="47.0"
					prefWidth="263.0">
					<font>
						<Font size="30.0" />
					</font>
				</PasswordField>
			</children>
		</VBox>
	</center>
	<right>
		<Button fx:id="btnLogin" mnemonicParsing="false"
			onAction="#handleBtnLoginAction" prefHeight="90.0" prefWidth="113.0"
			text="LogIn" BorderPane.alignment="CENTER">
			<font>
				<Font size="27.0" />
			</font>
		</Button>
	</right>
	<opaqueInsets>
		<Insets />
	</opaqueInsets>
	<padding>
		<Insets left="50.0" right="50.0" top="50.0" />
	</padding>

</BorderPane>
